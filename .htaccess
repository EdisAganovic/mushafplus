# Mushaf Plus - Server Caching Configuration
# Best used with Apache servers

<IfModule mod_expires.c>
    ExpiresActive On

    # HTML - Don't cache often to ensure UI updates are seen
    ExpiresByType text/html "access plus 0 seconds"

    # CSS and JavaScript - Stable files (1 Month)
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/javascript "access plus 1 month"

    # Fonts - Very stable (1 Year)
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType application/font-woff2 "access plus 1 year"
    ExpiresByType application/font-woff "access plus 1 year"

    # Media / Audio - Large assets (1 Month)
    ExpiresByType audio/mpeg "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/svg+xml "access plus 1 month"

    # Dataset (quran_data.js) - Very stable (1 Month)
    # Note: Handled by application/javascript above
</IfModule>

<IfModule mod_headers.c>
    # Ensure browsers verify files that are prone to change
    <FilesMatch "\.(html)$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>

    # Force caching for static assets
    <FilesMatch "\.(css|js|woff2|woff|mp3|svg|jpg|png)$">
        Header set Cache-Control "public, max-age=2592000, immutable"
    </FilesMatch>
</IfModule>
